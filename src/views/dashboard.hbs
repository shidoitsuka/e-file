<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dashboard | E-File</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link href="./assets/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="./assets/css/mdb.min.css" rel="stylesheet">
    <style>
        .navbar {
            background-color: #1565c0;
            color: white;
        }

        .e-file-icon {
            height: 250px;
            width: auto;
        }

        .content {
            margin-top: 4rem;
            min-height: 90vh;
        }

        .submit-btn {
            display: flex;
            justify-content: flex-end;
        }

        .popup-msg {
            position: absolute;
            bottom: 0;
            right: 10px;
            z-index: 10;
        }

        .side-navigation-container {
            background-color: #0f4a8c;
            height: 100vh;
            width: 100%;
            display: block;
        }

        .side-navigation-item {
            width: 100%;
            text-align: left;
        }
    </style>
</head>

<body>
    <div class="alert popup-msg" role="alert">
        <span id="message"></span>
    </div>
    <div class="container-fluid" style="position: fixed;">
        <header>

            <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar">
                <div class="navbar-nav mr-auto d-flex flex-row">
                    {{!-- <div class="nav-item">
                        <a class="nav-link" href="#">Upload</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" href="#">Manager</a>
                    </div> --}}
                </div>
                <div class="navbar-nav">
                    <div class="nav-item">
                        <a class="nav-link btn btn-sm btn-white text-dark px-3" href="/logout">Logout</a>
                    </div>
                </div>
            </nav>

        </header>

        <div class="row content">
            <div class="col-2 side-navigation-container">
                <div class="side-navigation-content my-5 d-flex">
                    <img height="auto" width="100px" class="mx-auto" src="./assets/img/e-file.svg" />
                </div>
                <div class="side-navigation-content d-flex">
                    <button type="button" class="side-navigation-item btn btn-white" href="/dashboard" disabled><i
                            class="fas fa-file-medical"></i>
                        &nbsp;Upload</button>
                </div>
                <div class="side-navigation-content d-flex">
                    <a class="side-navigation-item btn btn-white" href="/validate"><i class="fas fa-file-signature"></i>
                        List</a>
                </div>
                <div class="side-navigation-content d-flex">
                    <a class="side-navigation-item btn btn-white" href="/category"><i class="fas fa-file-alt"></i>
                        &nbsp;&nbsp;Kategori</a>
                </div>
            </div>
            <div class="col-10">
                <div class="col-12 d-flex justify-content-center my-4 my-lg-5">
                    <img src="./assets/img/e-file.svg" class="img-fluid e-file-icon" />
                </div>
                <form class="col-lg-6 mx-auto" action="/upload-doc" method="post" enctype="multipart/form-data">
                    <div class="col-12 p-3">
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" name="dokumen" class="custom-file-input" required />
                                <label class="custom-file-label">Pilih Dokumen</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 p-3">
                        <select name="kategori" class="browser-default custom-select" required>
                            <option value="" disabled selected>-Kategori-</option>
                            {{#each kategori}}
                                <option value="{{this.nama}}">{{this.nama}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-12 submit-btn">
                        <input class="btn btn-blue" type="submit" value="Upload" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- JQuery -->
    <script type="text/javascript" src="./assets/js/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="./assets/js/popper.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="./assets/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="./assets/js/mdb.min.js"></script>
    <script>
        $(document).ready(function () {
            const userLevel = document.cookie.split("; ").find(t => t.includes("level")).split("=")[1];
            if (userLevel > 0) return location.href = "validate";
            const url = new URLSearchParams(location.search);
            if (url.get("show") != null) {
                $("#message").html(decodeURIComponent(url.get("message")));
                $(".popup-msg").addClass(`alert-${url.get("color")}`).fadeIn(300);
            }
            setTimeout(() => {
                $(".popup-msg").removeClass(`alert-${url.get("color")}`).fadeOut(500);
                $("#message").html("");
            }, 3000);
        });
    </script>
</body>

</html>