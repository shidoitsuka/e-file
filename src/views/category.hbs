<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    {{!-- <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"> --}}
    <title>Dashboard | E-File</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link href="./assets/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="./assets/css/mdb.min.css" rel="stylesheet">
    <style>
        .navbar {
            background-color: #1565c0;
            color: white;
        }

        .e-file-icon {
            height: 250px;
            width: auto;
        }

        .content {
            margin-top: 4rem;
            min-height: 90vh;
        }

        .submit-btn {
            display: flex;
            justify-content: flex-end;
        }

        .popup-msg {
            position: fixed;
            bottom: 0;
            right: 0;
            z-index: 10;
        }

        .side-navigation-container {
            background-color: #0f4a8c;
            height: 100vh;
            width: 100%;
            display: block;
        }

        .side-navigation-item {
            width: 100%;
            text-align: left;
        }

        .table-container {
            height: 50vh;
            margin-top: 3vh;
            overflow-y: scroll;
            overflow-x: hidden;
        }

        .dataTables_filter {
            position: absolute;
            right: 10%;
        }

        .pagination {
            position: absolute;
            right: 5%;
        }
    </style>
</head>

<body>
    <div class="alert popup-msg" role="alert">
        <span id="message"></span>
    </div>
    <div class="container-fluid" style="position: fixed;">
        <header>

            <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar">
                <div class="navbar-nav mr-auto d-flex flex-row">
                    {{!-- <div class="nav-item">
                        <a class="nav-link" href="#">Upload</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" href="#">Manager</a>
                    </div> --}}
                </div>
                <div class="navbar-nav">
                    <div class="nav-item">
                        <a class="nav-link btn btn-sm btn-white text-dark px-3" href="/logout">Logout</a>
                    </div>
                </div>
            </nav>

        </header>

        <div class="row content">
            <div class="col-2 side-navigation-container">
                <div class="side-navigation-content my-5 d-flex">
                    <img height="auto" width="100px" class="mx-auto" src="./assets/img/e-file.svg" />
                </div>
                <div class="side-navigation-content d-flex">
                    <a class="side-navigation-item btn btn-white" href="/dashboard"><i class="fas fa-file-medical"></i>
                        &nbsp;Upload</a>
                </div>
                <div class="side-navigation-content d-flex">
                    <a class="side-navigation-item btn btn-white" href="/validate"><i class="fas fa-file-signature"></i>
                        List</a>
                </div>
                <div class="side-navigation-content d-flex">
                    <button type="button" class="side-navigation-item btn btn-white" href="/category" disabled><i
                            class="fas fa-file-alt"></i>
                        &nbsp;&nbsp;Kategori</button>
                </div>
            </div>
            <div class="col-10">
                <div class="col-12 d-flex justify-content-center mt-5">
                    <h1 class="h1">Tambahkan Kategori</h1>
                </div>
                <form class="col-lg-6 mx-auto" action="/add-category" method="post" enctype="multipart/form-data">
                    <label for="namaKategori">Kategori</label>
                    <input type="text" id="namaKategori" name="categoryName" class="form-control" required />
                    <div class="col-12 submit-btn">
                        <input class="btn btn-blue btn-sm" type="submit" value="Tambahkan Kategori" />
                    </div>
                </form>
                <div class="table-container">
                    <table class="table table-bordered mt-3" id="dtable">
                        <thead>
                            <tr>
                                <th style="width: 70%;" scope="col">Kategori</th>
                                {{#if show}}
                                    <th scope="col">Aksi</th>
                                {{/if}}
                            </tr>
                        </thead>
                        <tbody>
                            {{#if show}}
                                {{#each kategori}}
                                    <tr id="kategori-{{this.id}}">
                                        <td>{{this.nama}}</td>

                                        <td>
                                            <button type="button" class="btn btn-sm danger-color white-text"
                                                onclick="deleteCategory('{{this.id}}');">Hapus</button>
                                        </td>
                                    </tr>
                                {{/each}}
                            {{else}}
                                <div></div>
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- JQuery -->
    <script type="text/javascript" src="./assets/js/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="./assets/js/popper.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="./assets/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="./assets/js/mdb.min.js"></script>
    <!-- JQuery DataTable -->
    <script type="text/javascript" src="./assets/js/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#dtable").DataTable();
            $(".dataTables_length").addClass("bs-select");
            const url = new URLSearchParams(location.search);
            if (url.get("show") != null) {
                $("#message").html(decodeURIComponent(url.get("message")));
                $(".popup-msg").addClass(`alert-${url.get("color")}`).fadeIn(300);
            }
            setTimeout(() => {
                $(".popup-msg").removeClass(`alert-${url.get("color")}`).fadeOut(500);
                $("#message").html("");
            }, 3000);
        })
        function deleteCategory(id) {
            $.ajax({
                url: "/del-category",
                method: "POST",
                data: {
                    id,
                    userLevel: document.cookie.split("; ").find(t => t.includes("level")).split("=")[1]
                },
                success: function (result) {
                    if (result.status == 0) return alert("Tidak memiliki akses!");
                    $(`#kategori-${id}`).fadeOut(500);
                    console.log(result)
                }
            })
        }
    </script>
</body>

</html>